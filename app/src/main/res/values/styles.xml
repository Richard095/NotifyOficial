<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimario</item>
        <item name="colorPrimaryDark">@color/colorPrimario</item>
        <item name="colorAccent">@color/colorPrimario</item>
    </style>

    <style name="AppThemeBar" parent="Theme.AppCompat.Light">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimario</item>
        <item name="colorPrimaryDark">@color/colorPrimario</item>
        <item name="colorAccent">@color/colorPrimario</item>
    </style>

    <style name="AppThemeBar.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppThemeBar.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppThemeBar.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>
